---
export interface Props {
	title?: string;
	description?: string;
	heroImage?: string;
	imageAlt?: string;
}

const { title, description, heroImage, imageAlt } = Astro.props as Props;
const socialImageURL = new URL(`/static/${heroImage}`, Astro.site);
const canonicalURL = new URL(Astro.url).href;
---

<head lang="en">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="application-name" content="Rahul Dogra Studio" />
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:site_name" content="Rahul Dogra Studio" />
  <meta property="og:image:alt" content={imageAlt} />
  <meta property="og:locale" content="en" />
  <meta property="article:published_time" content="" />
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta name="twitter:site" content="@_rahuldogra" />
  <meta name="twitter:creator" content="@_rahuldogra" />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:label" content="Written by" />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={socialImageURL} />
  <meta name="generator" content={Astro.generator} />
  <meta name="robots" content="follow, index" />
  <meta name="author" content="Rahul Dogra" />
  <meta name="apple-mobile-web-app-title" content="Rahul Dogra Studio" />
  <meta name="msapplication-TileColor" content="#030617" />
  <meta name="msapplication-TileImage" content="/static/mstile-144x144.png" />
  <meta name="theme-color" content="#030617" />

  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/static/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/static/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/static/favicon-16x16.png"
  />

  <link rel="manifest" href="/site.webmanifest" />
  <link rel="mask-icon" href="/static/safari-pinned-tab.svg" color="#030617" />
  <link rel="canonical" href={canonicalURL} />

  <title class="font-bold">{title}</title>

  <script
    type="text/partytown"
    src="https://www.googletagmanager.com/gtag/js?id=G-E6RXKZF2HC"></script>
  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'G-E6RXKZF2HC', {
      cookie_flags: 'HttpOnly;Secure;SameSite=Strict',
    });
  </script>
</head>
